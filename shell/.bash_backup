#!/bin/bash

red="\033[1;31m";
blue="\033[1;34m";
green="\033[1;32m";
yellow="\033[1;33m";
default="\033[0m";

# $1 - pasta
# $2 - subpasta
function create {
  if [ -d "$1" ]; then
    if $2 == true; then
      echo "${yellow}==> $1 [existe]${default}"
    else
      echo "${yellow}=> $1 [existe]${default}"
    fi
  else
    mkdir "$1"
    if $2 == true; then
      echo "${green}==> $1 ✔${default}"
    else
      echo "${green}=> $1 ✔${default}"
    fi
  fi
  cd $1
}

# $1 - respositorio
function gh {
  if [ "$#" -eq "1" ]; then
    if [ -d "$1" ]; then
      echo "${yellow}==> $1 [existe]${default}"
      cd $1
      tput init
      git checkout -- .
      git pull
      cd ..
    else
      echo "${green}==> $1 ✔${default}\n"
      tput init
      git clone https://github.com/guiigos/$1.git
    fi
  else
    echo "${red}✖ Parâmetros ($#/1) ✖${default}"
  fi
  echo ""
}

# $1 - grupo
# $2 - respositorio
function gl {
  if [ "$#" -eq "2" ]; then
    if [ -d "$2" ]; then
      echo "${yellow}===> $2 [existe]${default}"
      cd $2
      tput init
      git checkout -- .
      git pull
      cd ..
    else
      echo "${green}===> $2 ✔${default}\n"
      tput init
      git clone https://gitlab.com/$1/$2.git
    fi
  else
    echo "${red}✖ Parâmetros ($#/2) ✖${default}"
  fi
  echo ""
}

# $1 - respositorio
function hr {
  if [ "$#" -eq "1" ]; then
    if [ -d "$1" ]; then
      echo "${yellow}==> $1 [existe]${default}"
      cd $1
      tput init
      git checkout -- .
      git pull
      cd ..
    else
      echo "${green}==> $1 ✔${default}\n"
      tput init
      git clone https://git.heroku.com/$1.git
    fi
  else
    echo "${red}✖ Parâmetros ($#/1) ✖${default}"
  fi
  echo ""
}

function github {
  create "GitHub" false
  cd ..
}
function gitlab {
  create "GitLab" false
  cd ..
}
function heroku {
  create "Heroku" false
  cd ..
}
function ini {
  printf "${blue}____________________________________${default}\n"
  echo "Backup repositórios GIT"
  printf "${blue}____________________________________${default}\n"
  echo "   ${red}[0]${default} - GitHub"
  echo "   ${red}[1]${default} - GitLab"
  echo "   ${red}[2]${default} - Heroku"
  echo
  echo "   ${red}[3]${default} - Todos"
  echo "   ${red}[4]${default} - Sair"
  echo "${blue}____________________________________${default}\n"
  read -n1 -r -p "Informe o valor: " key;
  echo "\n"

  if [ "${key}" -eq "0" ]; then
    github
  elif [ "${key}" -eq "1" ]; then
    gitlab
  elif [ "${key}" -eq "2" ]; then
    heroku
  elif [ "${key}" -eq "3" ]; then
    github
    gitlab
    heroku
  elif [ "${key}" -eq "4" ]; then
    clear
  else
    clear
    ini
  fi
}

clear
ini
read -n1 -r -p "Precione uma tecla para sair..."
echo "\nEncerrado..."
tput init
sleep 1s
clear
